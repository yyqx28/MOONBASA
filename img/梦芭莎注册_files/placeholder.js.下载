(function () { var a = { isValue: false, style: {} }; $.fn.placeholder = function (d) { var b, e, c; d = $.extend({}, a, d); e = d.isValue; b = $(this).find("input[placeholder],textarea[placeholder]"); c = "placeholder" in document.createElement("input"); if (!c) { if (e) { b.each(function () { var g, h, f; g = $(val); f = g.val(); h = g.attr("placeholder"); if (val === "") { g.val(h) } g.on("focus", function () { if (g.val() === h) { g.val("") } }); g.on("blur", function () { f = g.val(); if (f === "" || val === h) { g.val(placeHolder) } }) }) } else { b.each(function () { var q, h, l, s, g, r, m, j, p, t, n, f, o = ""; h = $(this); p = h.attr("placeholder"); m = h.attr("id"); if (!m) { m = "placeholder" + Math.random(); h.attr("id", m) } f = h.width(); s = h.height(); n = h.position().top; g = h.position().left; j = h.css("padding-left"); t = h.css("padding-top"); r = h[0].nodeName.toLowerCase() === "textarea" ? "" : s; q = $.extend({}, { position: "absolute", top: n, left: g, display: "inline-block", color: "#A9A9A9", cursor: "text", fontFamily: h.css("font-family"), fontSize: h.css("font-size"), paddingLeft: j, paddingTop: t, width: f, height: s, lineHeight: r + "px", zIndex: 1 }, d.style); for (var k in q) { if (q.hasOwnProperty(k)) { o += k + ":" + q[k] + ";" } } l = $('<label for="' + m + '"></label>').text(p).css(q); h.before(l); if (h.val() != "") { l.hide() } h.on("focus", function () { l.hide() }); h.on("blur", function () { l.hide(); v = h.val(); if (v === "" || v === p) { l.show() } }) }) } } } }).call(this);